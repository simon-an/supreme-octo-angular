{
  "extends": "./tsconfig.json",
  "baseUrl": "src",
  "paths": {
    "~core/*": ["app/core/*"],
    "~safe/*": ["app/safe/*"],
    "~layout/*": ["app/layout/*"],
    "~store/*": ["app/store/*"]
  },
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": []
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
